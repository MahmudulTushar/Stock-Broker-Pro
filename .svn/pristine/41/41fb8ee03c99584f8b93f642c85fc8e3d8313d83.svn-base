using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Drawing;

namespace BusinessAccessLayer.BO
{
   public class FormControlResizeBO
    {
        public FormControlResizeBO()
        {
            ControlName = string.Empty;
            ControlHeight = 0;
            ControlWidth = 0;
            LocationX = 0;
            LocationY = 0;
            ControlBackColor = SystemColors.Control;
            ControlForeColor = SystemColors.ControlText;
            //_font_Name=
            //_font_Size;
            _stateName = string.Empty;
            Visible = true;
            Enabled = true;
        }
        private string _control_Name;
        private int _control_Height;
        private int _control_Width;
        private int _location_X;
        private int _location_Y;
        private Color _control_Back_Color;
        private Color _control_Fore_Color;
        //private string _font_Name;
       // private int _font_Size;
        private bool _visible;
        private bool _enabled;
        private string _stateName;

        public bool Enabled
        {
            get { return _enabled; }
            set { _enabled = value; }
        }

        public bool Visible
        {
            get { return _visible; }
            set { _visible = value; }
        }

        public Color ControlForeColor
        {
            get { return _control_Fore_Color; }
            set { _control_Fore_Color = value; }
        }

        public Color ControlBackColor
        {
            get { return _control_Back_Color; }
            set { _control_Back_Color = value; }
        }

        public int LocationY
        {
            get { return _location_Y; }
            set { _location_Y = value; }
        }

        public int LocationX
        {
            get { return _location_X; }
            set { _location_X = value; }
        }

        public int ControlWidth
        {
            get { return _control_Width; }
            set { _control_Width = value; }
        }

        public int ControlHeight
        {
            get { return _control_Height; }
            set { _control_Height = value; }
        }

        public string ControlName
        {
            get { return _control_Name; }
            set { _control_Name = value; }
        }

        public string StateName
        {
            get { return _stateName; }
            set { _stateName = value; }
        }
    }
}
